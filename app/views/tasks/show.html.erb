<h1> <%= @task.title %></h1>

<div>
  <%= @task.details %>
</div>
<div>
  <% if @task.completed == true %>
    <%= "This task has been completed" %>
    <% else %>
    <%= "This task is not completed yet" %>
    <% end %>
</div>


<%= link_to "Back to list", tasks_path %>
<%= link_to 'Edit this task', edit_task_path(@task)  %>

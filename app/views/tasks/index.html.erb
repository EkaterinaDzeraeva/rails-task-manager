<h1> My tasks</h1>
<% @tasks.each do |task| %>
  <%= link_to task_path(task) do %>
    <div>
        <%= task.title %>
        <%= link_to "Delete this task", task_path(task), method: :delete, data: {confirm: "Are you sure you want to delete this task?"} %>
    </div>
  <% end %>
<% end %>

<%= link_to "Add a new task", new_task_path %>
